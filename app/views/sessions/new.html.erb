<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
<%= f.label :email, "メールアドレス" %>
<%= f.email_field :email %>

<%= f.label :password, "パスワード" %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "パスワード確認" %>
<%= f.password_field :password_confirmation %>

<%= f.submit "ログイン" %>

<% end %>
