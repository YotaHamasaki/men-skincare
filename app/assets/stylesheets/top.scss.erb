 .main-container {
  background-image: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .5)),url("<%= asset_path('top.jpeg') %>");
  height: 1060px;
  background-position: center;
  background-size: cover;
}
 
 .main-container::before{
  content: ' ';
 background-color: rgba(0,0,0,.5);
 
 top: 0;
 right: 0;
 bottom: 0;
 left: 0;
}
 .top-word {
 position: absolute;
 font-size: 20px;
width: 100%; 
 }
 
 .top-word p {
 color: white;
 text-align: center;
 }
 
 